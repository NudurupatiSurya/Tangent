<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <ImageView
        android:layout_width="217dp"
        android:layout_height="189dp"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/icon2"
        android:layout_gravity="center_horizontal"></ImageView>

    <TextView
        android:layout_width="204dp"
        android:layout_height="71dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="#ffff"
        android:text="USERNAME"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/nameee"
        android:layout_width="141dp"
        android:layout_height="71dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="right"
        android:background="#ffff"></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="#ffff"
        android:id="@+id/rp"
        android:text="Reported Groups/People"></Button>
    <Button
        android:text="Success Ratio"
        android:id="@+id/sr"
        android:layout_row="3"
        android:layout_column="0"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="84dp"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_row="4"
        android:layout_column="0"
        android:background="#ffff"
        android:text="Followers:0"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_row="5"
        android:layout_column="0"
        android:background="#ffff"
        android:text="Following:0"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>
    <Button
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_row="6"
        android:layout_column="0"
        android:text="Signout"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="622dp"
        android:background="#ffff"/>

</GridLayout>